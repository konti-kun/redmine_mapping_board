<h3 class="title"><%= l(:label_new_note) %></h3>

<%= form_for @note, :as => :note, :url => maps_add_note_path, :remote => true, :method => :post do |f| %>
  <%= render :partial => 'new_form' %>
  <p class="buttons">
    <%= submit_tag l(:button_add), :id => 'note-add-submit' %>
    <%= link_to_function l(:button_cancel), "hideModal(this);" %>
  </p>
<% end %>

